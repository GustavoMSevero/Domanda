final ArrayList<Estabelecimento> estab = new ArrayList<>();
        RequestQueue vq = Volley.newRequestQueue(this);

        GsonRequest<Estabelecimento[]> request = new GsonRequest<>("http://reservacomdomanda.com/areaAdmin/api/admin_estabelecimento/reqCiaJson.php?tipo="+dadoBusca, Estabelecimento[].class, null, new Response.Listener<Estabelecimento[]>() {
            @Override
            public void onResponse(Estabelecimento[] response) {
                //Log.i("ESTABELECIMENTO", response.toString());
                for (int i = 0; i < response.length; i++){
                    Estabelecimento temp = new Estabelecimento();
                    temp.setIdEstabelecimento(response[i].getIdEstabelecimento());
                    temp.setEstabelecimento(response[i].getEstabelecimento());
                    temp.setEndereco(response[i].getEndereco());
                    temp.setNumbero(response[i].getNumbero());
                    estab.add(temp);
                }
                Log.i("ESTABELECIMENTOo", estab.toString());
                adapter.notifyDataSetChanged();
                //Adapter carrega os dados na tela
                //ArrayAdapter<Estabelecimento> adapter = new ArrayAdapter<Estabelecimento>(BuscarActivity.this, android.R.layout.simple_expandable_list_item_1, estab);

//                list = ((ListView)findViewById(R.id.lista));
//                list.setAdapter(adapter);

            }
        }, new Response.ErrorListener() {
            @Override
            public void onErrorResponse(VolleyError error) {
                Log.e("ESTABELECIMENTOo", error.getMessage());
            }
        });

